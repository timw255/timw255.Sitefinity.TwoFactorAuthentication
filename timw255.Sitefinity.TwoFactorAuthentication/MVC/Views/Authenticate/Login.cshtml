@model timw255.Sitefinity.TwoFactorAuthentication.MVC.Models.LoginModel
 
@{
    Layout = "_Layout.cshtml";
}

<div class="container">
    <div class="login">
        <h1>Login to manage the site</h1>
        @using (Html.BeginForm())
        {
            if (!Html.ViewData.ModelState.IsValid)
            {
                <p class="error">@Html.ValidationMessage("InvalidCredentials")</p>
            }
            if (Model.ProvidersList.Count() > 1)
            {
                <p>
                    @Html.DropDownList("ProvidersList", Model.ProvidersList)
                    <input id="sf_domain" name="sf_domain" type="hidden" />
                </p>
            }
            <p><input type="text" name="wrap_name" value="" placeholder="Username" autofocus></p>
            <p><input type="password" name="wrap_password" value="" placeholder="Password"></p>
            <p class="remember_me">
                <label>
                    <label>
                        <input type="checkbox" name="sf_persistent" id="sf_persistent">
                        Remember me on this computer
                    </label>
                </label>
            </p>
            <input type="hidden" id="isFormRequest" name="is_form" value="true" />
            <p class="submit"><input type="submit" name="commit" value="Login"></p>
        }
    </div>
</div>